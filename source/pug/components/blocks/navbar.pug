mixin navbar-item(href, text)
  li.navbar__item
    a.navbar__link(href=href, class= currentUrl === href ? "is-active" : "")!=text

mixin navbar()
  aside.navbar&attributes(attributes)
    button.navbar__close(type="button", aria-label="Закрыть меню", data-navbar-close)
      +icon("icon-close", 20, 20)
    .navbar__wrapper
      .navbar__accordion(data-accordion="parent",data-single, data-close-inner)
        .navbar__element(class=pageType==="component" ? "is-active" : "", data-accordion="element")
          button.navbar__button(type="button", data-accordion="button") Компоненты
            +icon("icon-accordion", 16, 9).navbar__button-icon
          .navbar__content(data-accordion="content")
            .navbar__inner
              ul.navbar__list
                +navbar-item("components.html", "О разделе")
                +navbar-item("form-validate.html", "Валидация формы")
                +navbar-item("custom-select.html", "Кастомный селект")
                +navbar-item("auto-resize-textarea.html", "Автоизменение высоты textarea")
                +navbar-item("#", "Компонент")
                +navbar-item("#", "Компонент")
        .navbar__element(class=pageType==="case" ? "is-active" : "", data-accordion="element")
          button.navbar__button(type="button", data-accordion="button") Кейсы
            +icon("icon-accordion", 16, 9).navbar__button-icon
          .navbar__content(data-accordion="content")
            .navbar__inner
              ul.navbar__list
                +navbar-item("#", "Кейс - 2")
                +navbar-item("#", "Кейс - 2")
                +navbar-item("#", "Кейс - 3")
                +navbar-item("#", "Кейс - 4")
                +navbar-item("#", "Кейс - 5")
                +navbar-item("#", "Кейс - 6")
        .navbar__element(class=pageType==="guide" ? "is-active" : "", data-accordion="element")
          button.navbar__button(type="button", data-accordion="button") Гайды
            +icon("icon-accordion", 16, 9).navbar__button-icon
          .navbar__content(data-accordion="content")
            .navbar__inner
              ul.navbar__list
                +navbar-item("scaling.html", "Скейлинг")
                +navbar-item("#", "Гайд - 2")
                +navbar-item("#", "Гайд - 3")
                +navbar-item("#", "Гайд - 4")
                +navbar-item("#", "Гайд - 5")
                +navbar-item("#", "Гайд - 6")



