mixin search()
  .search(data-search="./data/data-search.json", data-da=".main-nav,1023,last")
    form.search__form(autocomplete="off")
      input.search__input(type="text", name="headerSearchInput", aria-label="Поиск по сайту", value="")
      span.search__button(type="submit", aria-label="Найти")
        +icon("icon-search", 20, 20)
    .search__wrapper
      p.search__note Введите Ваш запрос
      ul.search__list
